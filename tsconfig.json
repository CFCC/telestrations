{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "sourceMap": true
  },
  "include": [
    "src/client/**/*",
    "src/server/webapp/**/*",
    "src/types/*",
    "src/utils/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
