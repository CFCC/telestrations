{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"target": "esnext",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noEmit": true
	},
	"include": [
		"src/**/*",
		"types.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
